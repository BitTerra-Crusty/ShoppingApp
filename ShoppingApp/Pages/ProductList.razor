@page "/Product/{categoryId}"
@using ShoppingApp.Services

@inject ProductServices ProductService
@inject CartServices CartService

<NavMenu cartCount="@CartService.CustomerProducts.Count()" OnfilterByproduct="FilterByProduct"></NavMenu>

@*End of nav*@
<div class="main container">
    <div class="content px-4">

        @{
            var products = ProductService.Products;

            products = products.Where(p => p.CategoryId == int.Parse(categoryId)).ToList();
        }

        <div class="row my-5">
            @if (products == null)
            {
                <h3>No Products available</h3>
            }
            else
            {
                if (ProductService.FilteredProducts.Where(p => p.CategoryId == int.Parse(categoryId)).ToList().Count() > 0)
                {
                    products = ProductService.FilteredProducts.Where(p => p.CategoryId == int.Parse(categoryId)).ToList();
                }
                else
                {
                    if (ProductName != null && ProductName.Length > 0)
                    {
                        <h3 class="text-danger text-center col-12">No product '@ProductName' is found</h3>
                        <h4 class="text-secondary col-12">All Products...</h4>
                    }
                }
                <h4 class="text-secondary col-sm-12 text-center" id="down">Product List</h4>
                <div class="col-sm-12 my-4">
                    <div class="col-sm-12 col-md-4 float-md-left">

                    </div>
                    <Sort OnSort="Sort"></Sort>
                </div>
                foreach (var product in products)
                {
                    <div class="col-sm-12 col-md-6 col-lg-4">
                        <div class="card">
                            <div class="card-header text-center text-uppercase font-weight-bolder">
                                @product.Name
                            </div>
                            <div class="card-body">
                                <div class="text-center">
                                    <a href="/ProductDetails/@product.ProductId"><img src='@product.PhotoPath' title='@product.Name' class="card-img" alt='@product.Name' /></a>
                                </div>
                                @*<div class="text-center">@product.Description</div>*@
                                <div class="text-right btn btn-secondary">R @product.Price.ToString("N")</div>
                            </div>

                            @if (CartService.CustomerProducts.FirstOrDefault(c => c.ProductId == product.ProductId) != null)
                            {
                                <div class="card-footer text-center" onclick="ChangeButtonForm('@product.ProductId')">
                                    <div class="input-group">
                                        <button class="btn btn-success rem-Product" id="@product.ProductId" @onclick="(() => CartService.DecreaseProductQuantity(product.ProductId, 1, 1))"><b>-</b></button>
                                        <input type="text" readonly class="text-center form-control" value="@CartService.CustomerProducts.FirstOrDefault(c => c.ProductId == product.ProductId).Quantity in a Cart" />
                                        <button class="btn btn-success add-Product" id="@product.ProductId" @onclick="(() => CartService.IncreaseProductQuantity(product.ProductId, 1, 1))"><b>+</b></button>

                                    </div>

                                </div>
                            }
                            else
                            {
                                <div class="card-footer text-center desc-view-btn" onclick="ChangeButtonForm('@product.ProductId')">
                                    <button class="btn btn-success" id="@product.ProductId" @onclick="(() => CartService.CreateCart(product.ProductId, 1, 1))">Add to cart</button>
                                </div>
                            }


                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>
@code
{
    [Parameter]
    public string categoryId { get; set; }

    private string ProductName { get; set; }

    public void FilterByProduct(string productName)
    {
        ProductName = productName;
        ProductService.FilteredProducts.ToList();
    }
    public void Sort(string sortValue)
    {
        ProductService.Products.ToList();
    }
}
